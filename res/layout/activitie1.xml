<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/contents"
        android:layout_width="1280px"
        android:layout_height="800px"
        android:layout_gravity="center"
        android:background="@drawable/interface_episode" >

        <ImageView
            android:id="@+id/question1"
            android:layout_width="878px"
            android:layout_height="585px"
            android:layout_marginLeft="120px"
            android:layout_marginTop="120px"
            android:background="@drawable/question1" />

        <RelativeLayout
            android:id="@+id/content_line"
            android:layout_width="1280px"
            android:layout_height="800px"
            android:layout_gravity="center" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/exit"
                android:layout_width="44px"
                android:layout_height="43px"
                android:layout_marginLeft="84px"
                android:layout_marginTop="50px"
                android:src="@drawable/bt_exit" />

            <ImageView
                android:id="@+id/home"
                android:layout_width="68px"
                android:layout_height="60px"
                android:layout_marginLeft="137px"
                android:layout_marginTop="30px"
                android:src="@drawable/bt_home" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/loup"
            android:layout_width="188px"
            android:layout_height="240px"
            android:layout_marginLeft="1040px"
            android:layout_marginTop="440px"
            android:background="@drawable/loup_act" />

        <LinearLayout
            android:id="@+id/zd1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="650px"
            android:layout_marginTop="260px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/depart1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/boule_depart_ex3_sci_tri1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zd2"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="650px"
            android:layout_marginTop="440px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/depart2"
                android:layout_width="50px"
            android:layout_height="50px"
                android:src="@drawable/boule_depart_ex3_sci_tri1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zd3"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="650px"
            android:layout_marginTop="600px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/depart3"
                android:layout_width="50px"
            android:layout_height="50px"
                android:src="@drawable/boule_depart_ex3_sci_tri1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/za1"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="240px"
            android:background="@drawable/boule_arrive_ex3_sci_tri1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/za2"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="400px"
            android:background="@drawable/boule_arrive_ex3_sci_tri1"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/za3"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="580px"
            android:background="@drawable/boule_arrive_ex3_sci_tri1"
            android:orientation="vertical" >
        </LinearLayout>

        <ImageView
            android:id="@+id/valider"
            android:layout_width="95px"
            android:layout_height="94px"
            android:layout_marginLeft="560px"
            android:layout_marginTop="690px"
            android:background="@drawable/validate" />

        <ImageView
            android:id="@+id/repeat"
            android:layout_width="95px"
            android:layout_height="94px"
            android:layout_marginLeft="680px"
            android:layout_marginTop="690px"
            android:background="@drawable/repeat" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/faux"
                android:layout_width="276px"
                android:layout_height="210px"
                android:layout_marginLeft="1000px"
                android:layout_marginTop="300px"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/vrai"
                android:layout_width="245px"
                android:layout_height="199px"
                android:layout_marginLeft="1000px"
                android:layout_marginTop="300px"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/incomplet"
                android:layout_width="245px"
                android:layout_height="199px"
                android:layout_marginLeft="1000px"
                android:layout_marginTop="300px"
                android:visibility="invisible" />
        </RelativeLayout>

        <include
            android:id="@+id/exit_popup"
            android:layout_width="1280px"
            android:layout_height="800px"
            layout="@layout/exit" />

        <include
            android:id="@+id/layout_activite"
            android:layout_width="1280px"
            android:layout_height="800px"
            layout="@layout/popup_activite" />
    </RelativeLayout>

</FrameLayout>